{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "resolveJsonModule": true,
        "target": "es5",
        "baseUrl": ".",
        "paths": {
            "@react-pdf-viewer/*": ["packages/*/src"],
            "*": ["node_modules", "packages"]
        },
        "types": ["expect-puppeteer", "jest-environment-puppeteer", "puppeteer", "@testing-library/jest-dom"]
    },
    "include": ["./@types"],
    "exclude": ["node_modules"]
}
